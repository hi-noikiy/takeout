<resources>

    <!-- Base application theme. -->

    <style name="WaimaiTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--将Activity的Theme设置成透明-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="colorAccent">@color/delivery_type_color</item>
    </style>

    <style name="StartingWindowTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/app_bg</item>
    </style>

    <!--waimai delivery time dialog Activity style-->
    <style name="NoTitleDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--<item name="android:windowAnimationStyle">@style/AnimSlideBottom</item>-->

    <style name="Popupwindow">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

    <style name="AddressEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/px36sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AddressEditViewTextStyle">
        <item name="android:layout_width">@dimen/px230dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white_88</item>
        <item name="android:textSize">@dimen/px36sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AddressEditLLStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px124dp</item>
        <item name="android:layout_marginLeft">@dimen/px84dp</item>
        <item name="android:layout_marginRight">@dimen/px74dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AddressEditContactStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px102dp</item>
        <item name="android:layout_marginLeft">@dimen/px84dp</item>
        <item name="android:layout_marginRight">@dimen/px84dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AddressEditDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px2dp</item>
        <item name="android:layout_marginLeft">@dimen/px84dp</item>
        <item name="android:layout_marginRight">@dimen/px84dp</item>
        <item name="android:background">@color/split_view_color</item>
    </style>

    <style name="OrderDetailsText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/px36sp</item>
    </style>

    <declare-styleable name="ConstraintHeightListView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <style name="AutoCompleteStyle" parent="@android:style/Widget.AutoCompleteTextView">
        <item name="android:popupBackground">@null</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/px36sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="notAnimation">
         <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
         <item name="android:taskOpenExitAnimation">@null</item>
            <item name="android:taskCloseEnterAnimation">@null</item>
            <item name="android:taskCloseExitAnimation">@null</item>
            <item name="android:taskToFrontEnterAnimation">@null</item>
            <item name="android:taskToFrontExitAnimation">@null</item>
            <item name="android:taskToBackEnterAnimation">@null</item>
            <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <!--<item name="android:windowFrame">@null</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@style/ActivityAnimation</item>
        <!--<item name="android:windowIsFloating">false</item>-->
        <!--<item name="android:textColor">@color/white</item>-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="ActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>
</resources>

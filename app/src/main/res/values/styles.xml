<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--waimai delivery time dialog Activity style-->
    <style name="NoTitleDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/AnimSlideBottom</item>
    </style>

    <style name="AnimSlideBottom" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

    <style name="Popupwindow">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>

    <style name="CustomCheckBoxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <style name="AddressEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/px36sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AddressEditViewTextStyle">
        <item name="android:layout_width">@dimen/px240dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/white_88</item>
        <item name="android:textSize">@dimen/px42sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AddressEditLLStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px126dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AddressEditContactStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px102dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="AddressEditDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#8f9194</item>
    </style>

    <style name="OrderDetailsText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/px36sp</item>
    </style>

</resources>

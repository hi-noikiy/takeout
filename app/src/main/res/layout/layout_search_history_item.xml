<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="@dimen/px126dp">

	<TextView
		android:id="@+id/tv_history_num"
		android:layout_width="@dimen/px100dp"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:textColor="@color/white"
		android:textSize="@dimen/px40sp"
		tools:text="1" />

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/iv_delete"
		android:layout_width="@dimen/px96dp"
		android:layout_height="@dimen/px96dp"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
		android:src="@drawable/icon_close" />

	<TextView
		android:id="@+id/tv_history_name"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="@dimen/px20dp"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/tv_history_num"
		android:layout_toLeftOf="@+id/iv_delete"
		android:ellipsize="end"
		android:maxLines="1"
		android:textColor="@color/white"
		android:textSize="@dimen/px40sp"
		tools:text="@string/tools_text_history_name" />

	

</RelativeLayout>
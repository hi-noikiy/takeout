<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pay_panel"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/address_info"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/layout_border_shape">

                <RelativeLayout
                    android:id="@+id/modify_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textColor="@color/black_text"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_address"
                        android:layout_marginTop="5dp"
                        android:singleLine="true"
                        android:textColor="@color/gray_text" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_name"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/tv_name"
                        android:singleLine="true"
                        android:textColor="@color/gray_text" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_address"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_click"
                    android:scaleType="fitCenter" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/delivery_info"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/address_info"
                android:background="@drawable/layout_border_shape">

                <TextView
                    android:id="@+id/type_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/arrive_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="50dp"
                    android:singleLine="true"
                    android:textColor="@color/black_text"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/img_time"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ic_click"
                    android:scaleType="fitCenter" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/store_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/delivery_info"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/layout_border_shape"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:gravity="center_vertical"
                        android:textColor="@color/black_text"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/delivery_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/delivery_text_border"
                        android:padding="5dp"
                        android:textColor="@color/gray_text" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/product_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/layout_border_shape"
                    android:gravity="center_vertical">


                    <TextView
                        android:id="@+id/packing_fee_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/packing_fee" />

                    <TextView
                        android:id="@+id/packing_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:id="@+id/delivery_fee_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/packing_fee_summary"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/shipping_fee_text" />

                    <TextView
                        android:id="@+id/shipping_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/packing_fee"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/layout_border_shape"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="满减优惠" />

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/pay_type_panel"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/layout_border_shape"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/payment_summary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="20dp"
                        android:text="@string/payment" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/pay_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discount_WarnTip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp"
            android:background="@drawable/delivery_text_border"
            android:gravity="center"
            android:text="@string/discount_prompt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px150dp"
            android:background="@drawable/layout_border_shape"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/discount_exists"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/px40dp" />

            <TextView
                android:id="@+id/total"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/px20dp"
                android:textColor="@color/black_text" />

            <TextView
                android:id="@+id/to_pay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@color/gray_bg"
                android:gravity="center"
                android:text="@string/to_pay_text"
                android:textColor="@color/white_bg" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="@dimen/px528dp"
        android:layout_height="@dimen/px102dp"
        android:background="@color/simple_item_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px36dp"
        android:textColor="@color/white"
        android:textSize="@dimen/px36sp" />

    <View
        android:id="@+id/split_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/px36dp"
        android:layout_marginRight="@dimen/px36dp"
        android:background="@color/split_view_color" />
</RelativeLayout>
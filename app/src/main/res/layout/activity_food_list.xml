<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/noData"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#EB6100"
        android:gravity="center"
        android:text="@string/no_more_data"
        android:textSize="14sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/parentLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_finish"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_shop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_store_details"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="50dp"
            android:background="@color/gray">

            <ImageView
                android:id="@+id/iv_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/distribution_situation" />

                <TextView
                    android:id="@+id/tv_bulletin"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/notice" />

                <TextView
                    android:id="@+id/tv_discounts"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:text="@string/discount" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/toolBar"
            android:layout_below="@+id/rl_store_details"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/classify_mainlist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#F4F4F5"
                android:cacheColorHint="#00000000"
                android:divider="#dcdcdc"
                android:dividerHeight="1px"
                android:fastScrollEnabled="false"
                android:listSelector="#00000000"
                android:scrollbars="none" />

            <com.baidu.iov.dueros.waimai.view.PoifoodListPinnedHeaderListView
                android:id="@+id/classify_morelist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#fff"
                android:cacheColorHint="#00000000"
                android:divider="#dcdcdc"
                android:dividerHeight="0.5px"
                android:listSelector="#00000000" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/toolBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="18sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="#313131"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/shopping_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/shopping_cart" />

                    <TextView
                        android:id="@+id/shoppingNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@+id/shopping_cart"
                        android:layout_alignTop="@+id/shopping_cart"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="8sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/shoppingPrise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toRightOf="@+id/shopping_cart"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/settlement"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#DC5914"
                    android:gravity="center"
                    android:text="@string/confirmation_of_the_order"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/cardLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/toolBar"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:id="@+id/bg_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="#a0000000"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/cardShopLayout"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:gravity="bottom"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#DC5914">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="6dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="6dp"
                        android:text="@string/shop_cart"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="6dp"
                        android:paddingRight="20dp"
                        android:paddingTop="6dp"
                        android:text="@string/empty_all"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:background="#f3f3f3"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/defaultText"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/shopping_cart_is_empty"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <ListView
                        android:id="@+id/shopproductListView"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:cacheColorHint="#00000000"
                        android:divider="#dcdcdc"
                        android:dividerHeight="1px"
                        android:listSelector="#00000000"
                        android:orientation="vertical">

                    </ListView>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>


    </RelativeLayout>


</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px120dp"
    android:paddingLeft="@dimen/px54dp"
    android:background="@color/gray_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/address_back"
        android:layout_width="@dimen/px96dp"
        android:layout_height="@dimen/px96dp"
        android:src="@drawable/icon_back" />

    <TextView
        android:id="@+id/address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/address_select_title"
        android:textColor="@color/white"
        android:textSize="@dimen/px48sp" />

    <ImageView
        android:id="@+id/address_del"
        android:layout_width="@dimen/px48dp"
        android:layout_height="@dimen/px48dp"
        android:layout_marginRight="@dimen/px82dp"
        android:src="@drawable/delete"
        android:visibility="invisible" />
</LinearLayout>
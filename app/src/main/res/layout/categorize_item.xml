<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px118dp">

    <TextView
        android:id="@+id/mainitem_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/px80dp"
        android:layout_marginRight="@dimen/px80dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textColor="@color/white"
        android:text="@string/popular_classification"
        android:textSize="@dimen/px32sp" />

     <TextView
         android:id="@+id/tv_num"
         android:layout_width="@dimen/px30dp"
         android:layout_height="@dimen/px30dp"
         android:layout_alignRight="@+id/mainitem_txt"
         android:layout_alignTop="@+id/mainitem_txt"
         android:background="@drawable/point"
         android:gravity="center"
         android:textColor="@color/white"
         android:textSize="@dimen/px24sp"
         android:visibility="visible" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px168dp">

    <com.domain.multipltextview.MultiplTextView
        android:id="@+id/address_select_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px36dp"
        android:textColor="@color/white"
        android:textSize="@dimen/px48sp" />

    <LinearLayout
        android:id="@+id/address_select_details_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/px62dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address_select_des_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:layout_marginTop="@dimen/px32dp"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px36sp" />

                <TextView
                    android:id="@+id/tv_address_type"
                    android:layout_width="@dimen/px110dp"
                    android:layout_marginTop="@dimen/px28dp"
                    android:layout_height="@dimen/px40dp"
                    android:layout_marginLeft="@dimen/px40dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address_select_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#99ffffff"
                    android:textSize="@dimen/px30sp" />

                <TextView
                    android:id="@+id/address_select_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:textColor="#99ffffff"
                    android:textSize="@dimen/px30sp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/address_select_edit"
            android:layout_width="@dimen/px64dp"
            android:layout_height="@dimen/px64dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px20dp"
            android:src="@drawable/address_edit" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/split_view_color" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/address_select_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.domain.multipltextview.MultiplTextView
            android:id="@+id/address_select_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px36dp"
            android:textColor="@color/white"
            android:textSize="@dimen/px48sp" />

        <TextView
            android:id="@+id/tv_address_type"
            android:layout_width="@dimen/px110dp"
            android:layout_height="@dimen/px40dp"
            android:layout_marginLeft="@dimen/px40dp"
            android:layout_marginTop="@dimen/px14dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/px24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px36dp"
            android:layout_marginBottom="@dimen/px36dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px28dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/address_select_des_details"
                    android:layout_width="match_parent"
                    android:includeFontPadding="false"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/px36sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/address_select_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#99ffffff"
                        android:textSize="@dimen/px30sp" />

                    <TextView
                        android:id="@+id/address_select_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px30dp"
                        android:textColor="#99ffffff"
                        android:textSize="@dimen/px30sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/address_select_edit"
                android:layout_width="@dimen/px64dp"
                android:layout_height="@dimen/px64dp"
                android:layout_gravity="center"
                android:src="@drawable/address_edit" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:background="@color/split_view_color" />
</LinearLayout>
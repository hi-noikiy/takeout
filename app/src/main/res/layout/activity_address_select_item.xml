<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/address_select_details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px36dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_select_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="@dimen/px48sp" />

        <ImageView
            android:id="@+id/address_type"
            android:layout_width="@dimen/px96dp"
            android:layout_height="@dimen/px96dp"
            android:layout_marginLeft="@dimen/px24dp"
            android:src="@drawable/address_other" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px28dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/address_select_des_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px36sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/address_select_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px30sp" />

                    <TextView
                        android:id="@+id/address_select_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/px30sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/address_select_edit"
                android:layout_width="@dimen/px64dp"
                android:layout_height="@dimen/px64dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/address_edit" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:layout_marginTop="@dimen/px36dp"
        android:background="@color/dark_gray" />
</LinearLayout>
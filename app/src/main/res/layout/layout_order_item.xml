<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px300dp"
    android:orientation="vertical"
    android:paddingLeft="@dimen/px84dp"
    android:paddingRight="@dimen/px84dp">

    <com.domain.multipltextview.MultiplTextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px26dp"
        android:textColor="@color/white"
        android:textSize="@dimen/px48sp" />

    <ImageView
        android:id="@+id/iv_store"
        android:layout_width="@dimen/px120dp"
        android:layout_height="@dimen/px126dp"
        android:layout_marginLeft="@dimen/px60dp"
        android:layout_marginTop="@dimen/px26dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_store">

        <LinearLayout
            android:id="@+id/ll_order_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px32dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginTop="@dimen/px16dp"
                android:layout_width="@dimen/px540dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/px14dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px36sp" />

            </RelativeLayout>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textSize="@dimen/px30sp"
                tools:text="123" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_total_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/px30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20dp"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/one_more_order"
                    android:layout_width="@dimen/px210dp"
                    android:layout_height="@dimen/px72dp"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px30sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/pay_order"
                    android:layout_width="@dimen/px210dp"
                    android:layout_height="@dimen/px72dp"
                    android:background="@drawable/btn_blue"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px30sp"
                    android:visibility="gone" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/cancel_order"
                    android:layout_width="@dimen/px210dp"
                    android:layout_height="@dimen/px72dp"
                    android:layout_marginLeft="@dimen/px16dp"
                    android:background="@drawable/btn2"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/px30sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/px22dp"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:includeFontPadding="false"
                android:textColor="#ffffff"
                android:textSize="@dimen/px30sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/px70dp"
                android:textColor="#ffc600"
                android:textSize="@dimen/px36sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/px44dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/px28sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/split_view_color" />

</RelativeLayout>
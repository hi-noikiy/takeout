<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_centerVertical="true"
    android:layout_marginStart="30dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="6"
        android:singleLine="true"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_address_type_title"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_address_title"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/tv_address_title"
        android:background="@color/yellow_bg"
        android:gravity="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_address_title"
        android:layout_below="@+id/tv_address_title"
        android:ellipsize="end"
        android:maxEms="4"
        android:singleLine="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_name_title"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/tv_name_title"
        android:textSize="15sp" />

</RelativeLayout>

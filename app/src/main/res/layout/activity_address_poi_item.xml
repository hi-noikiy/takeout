<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/gray_bg"
    android:padding="@dimen/px40dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/poi_item_num"
        android:textSize="@dimen/px50sp"
        android:layout_width="@dimen/px90dp"
        android:layout_height="match_parent"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/poi_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/poi_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white_88" />
    </LinearLayout>

    <TextView
        android:id="@+id/poi_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="@color/white_88" />
</LinearLayout>
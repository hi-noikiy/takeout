<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px500dp"
    android:layout_height="@dimen/px140dp"
    android:background="@drawable/toast_bg"
    android:layout_marginBottom="@dimen/px148dp"
    android:layout_gravity="bottom|center_horizontal"
    android:gravity="center">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/jiazai" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px24dp"
        android:text="@string/loading"
        android:textColor="@color/white"
        android:textSize="@dimen/px36sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.domain.multipltextview.MultiplTextView
        android:id="@+id/tv_food_name"
        style="@style/OrderDetailsText"
        android:layout_width="@dimen/px690dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px36dp"
        app:removeDefaultPadding="true" />

    <com.domain.multipltextview.MultiplTextView
        android:id="@+id/tv_food_price"
        style="@style/OrderDetailsText"
        android:layout_width="@dimen/px182dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_food_name"
        android:layout_alignParentEnd="true"
        app:removeDefaultPadding="true" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px126dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.domain.multipltextview.MultiplTextView
            android:id="@+id/tv_delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px36dp"
            android:layout_marginTop="@dimen/px44dp"
            android:layout_marginBottom="@dimen/px46dp"
            android:layout_marginStart="@dimen/px84dp"
            android:textColor="@color/white"
            android:textSize="@dimen/px36sp"
            app:removeDefaultPadding="true" />

        <com.domain.multipltextview.MultiplTextView
            android:id="@+id/tv_delivery_cost"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px36dp"
            android:layout_marginTop="@dimen/px44dp"
            android:layout_marginBottom="@dimen/px46dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/px204dp"
            android:textColor="@color/white"
            android:textSize="@dimen/px36sp"
            app:removeDefaultPadding="true"
            />

        <ImageView
            android:id="@+id/img_delivery_select"
            android:layout_width="@dimen/px64dp"
            android:layout_height="@dimen/px64dp"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/px32dp"
            android:layout_marginEnd="@dimen/px84dp"
            android:layout_marginStart="@dimen/px56dp"
            android:layout_marginTop="@dimen/px30dp"
            android:scaleType="fitCenter"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:layout_marginEnd="@dimen/px204dp"
        android:layout_marginStart="@dimen/px70dp"
        android:alpha="0.06"
        android:background="@color/white" />

</LinearLayout>

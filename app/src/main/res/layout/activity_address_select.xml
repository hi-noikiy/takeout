<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_address_header" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/address_select_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/address_select_add"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/cinema_blue"
        android:text="@string/address_select_add_address"
        android:layout_marginBottom="@dimen/px720dp"/>
</LinearLayout>

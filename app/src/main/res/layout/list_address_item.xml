<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_centerVertical="true"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:gravity="center"
        android:textSize="25sp" />


    <RelativeLayout
        android:id="@+id/address_panel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/tv_num">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="10"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_address_type"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_address"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/tv_address"
            android:background="@color/yellow_bg"
            android:gravity="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_address"
            android:layout_below="@+id/tv_address"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_name"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/tv_name"
            android:textSize="15sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/select_address_icn"
        android:scaleType="fitCenter" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px168dp"
    android:layout_centerVertical="true"
    android:descendantFocusability="blocksDescendants">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:layout_marginEnd="@dimen/px86dp"
        android:layout_marginStart="@dimen/px84dp"
        android:alpha="0.06"
        android:background="@color/white" />

    <com.domain.multipltextview.MultiplTextView
        android:id="@+id/tv_num"
        app:removeDefaultPadding="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/px36dp"
        android:layout_marginStart="@dimen/px84dp"
        android:layout_below="@+id/divider"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/px48sp" />


    <RelativeLayout
        android:id="@+id/address_panel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/px160dp">

        <com.domain.multipltextview.MultiplTextView
            android:id="@+id/tv_address"
            app:removeDefaultPadding="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/px84dp"
            android:layout_marginTop="@dimen/px34dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/px36sp"/>

        <TextView
            android:id="@+id/tv_address_type"
            android:layout_width="@dimen/px110dp"
            android:layout_height="@dimen/px40dp"
            android:layout_marginStart="@dimen/px56dp"
            android:layout_marginTop="@dimen/px32dp"
            android:layout_toEndOf="@id/tv_address"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/px30sp" />

        <com.domain.multipltextview.MultiplTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_address"
            android:layout_below="@+id/tv_address"
            android:layout_marginTop="@dimen/px26dp"
            android:alpha="0.6"
            android:textColor="@color/white"
            android:textSize="@dimen/px30sp"
            app:removeDefaultPadding="true" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="@dimen/px64dp"
        android:layout_height="@dimen/px64dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/px84dp"
        android:background="@drawable/address_edit"
        android:scaleType="fitCenter" />

</RelativeLayout>

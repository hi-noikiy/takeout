<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/gray_bg"
    tools:context="com.baidu.iov.dueros.waimai.ui.PaySuccessActivity">

    <ImageView
        android:id="@+id/pay_success_img"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="@mipmap/ic_pay_success"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/pay_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_success_img"
        android:layout_marginTop="10dp"
        android:textSize="35sp"
        android:textColor="@color/white_bg"
        android:text="支付成功!"/>

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pay_success"
        android:textSize="30sp"
        android:textColor="@color/white_bg"
        android:layout_marginTop="10dp"
        android:text="￥ 35"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/money"
        android:layout_marginTop="10dp"
        android:textColor="@color/white_bg"
        android:text="点击查看订单详情"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>

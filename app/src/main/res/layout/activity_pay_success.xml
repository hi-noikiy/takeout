<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.baidu.iov.dueros.waimai.ui.PaySuccessActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/store_photo_img"
            android:layout_width="@dimen/px300dp"
            android:layout_height="@dimen/px300dp"
            android:background="@drawable/ic_packing_expense"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px300dp"
            android:layout_marginStart="@dimen/px80dp"
            android:layout_toEndOf="@id/store_photo_img"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="8"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/px60sp" />

            <TextView
                android:id="@+id/product_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px20dp"
                android:text="@string/product_info"
                android:maxEms="8"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="@dimen/px60sp" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/delivery_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="@string/pay_succuess_address"
            android:textSize="@dimen/px60sp" />

        <TextView
            android:id="@+id/user_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/px60sp" />

        <TextView
            android:id="@+id/recipient_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/user_info_tv"
            android:layout_below="@+id/user_info_tv"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/px60sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />


    <TextView
        android:id="@+id/order_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px160dp"
        android:layout_gravity="center_horizontal"
        android:drawableRight="@drawable/icn_come_in"
        android:gravity="center"
        android:text="@string/check_order_details"
        android:textSize="@dimen/px60sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/complete_tv"
        android:layout_width="@dimen/px500dp"
        android:layout_height="@dimen/px120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px60dp"
        android:background="@color/gray"
        android:gravity="center"
        android:text="@string/complete"
        android:textColor="@color/white"
        android:textSize="@dimen/px60sp" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px130dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="@dimen/px130dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px30dp"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/order_details"
            android:textSize="@dimen/px56sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px180dp"
        android:background="@color/gray"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="@dimen/px100dp"
            android:layout_height="@dimen/px100dp"
            android:layout_marginLeft="@dimen/px80dp"
            android:background="@drawable/sel_check" />

        <TextView
            android:id="@+id/pay_status"
            android:layout_width="@dimen/px0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/px46sp" />

        <TextView
            android:id="@+id/arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/px50dp"
            android:gravity="center_vertical"
            android:text="@string/arrival_time"
            android:textSize="@dimen/px46sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px150dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/repeat_order"
            android:layout_width="@dimen/px400dp"
            android:layout_height="@dimen/px110dp"
            android:layout_marginLeft="@dimen/px100dp"
            android:background="@color/gray_bg"
            android:text="@string/one_more_order"
            android:textColor="@color/white"
            android:textSize="@dimen/px46sp" />

        <Button
            android:id="@+id/pay_order"
            android:layout_width="@dimen/px400dp"
            android:layout_height="@dimen/px110dp"
            android:layout_marginLeft="@dimen/px100dp"
            android:background="@color/gray_bg"
            android:text="@string/pay_order"
            android:textColor="@color/white"
            android:textSize="@dimen/px46sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/cancel_order"
            android:layout_width="@dimen/px400dp"
            android:layout_height="@dimen/px110dp"
            android:layout_marginLeft="@dimen/px80dp"
            android:background="@color/white"
            android:text="@string/order_cancel"
            android:textColor="@color/gray_bg"
            android:textSize="@dimen/px46sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px150dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px80dp"
            android:layout_weight="1"
            android:text="外卖服务由美团外卖提供"
            android:textColor="@color/black"
            android:textSize="@dimen/px46sp" />

        <Button
            android:id="@+id/phone"
            android:layout_width="@dimen/px80dp"
            android:layout_height="@dimen/px80dp"
            android:layout_marginRight="@dimen/px80dp"
            android:background="@color/gray" />
    </LinearLayout>

    <TextView
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/px80dp"
        android:gravity="center_vertical"
        android:text="杨铭宇黄焖鸡米饭（景明佳园店）"
        android:textSize="@dimen/px40sp" />

    <ListView
        android:id="@+id/ll_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px80dp"
        android:layout_marginRight="@dimen/px80dp"
        android:clickable="false"
        android:divider="@null"
        android:scrollbars="none"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px80dp"
            android:layout_weight="1"
            android:text="包装费" />

        <TextView
            android:id="@+id/packing_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px80dp"
            android:text="¥2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px80dp"
            android:layout_weight="1"
            android:text="配送费" />

        <TextView
            android:id="@+id/distribution_fee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px80dp"
            android:text="¥2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px80dp"
            android:layout_weight="1"
            android:text="满减优惠" />

        <TextView
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px80dp"
            android:text="-¥14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/real_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px80dp"
            android:text="实付19.5元" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:background="@color/gray"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px80dp"
            android:layout_weight="1"
            android:text="配送地址" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px80dp"
            android:text="周女士 13813881388" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px80dp"
            android:text="南海科技生物园" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px80dp"
            android:layout_weight="1"
            android:text="期望时间" />

        <TextView
            android:id="@+id/expected_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px80dp"
            android:text="2018-10-19 （周五）18:30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px80dp"
            android:layout_weight="1"
            android:text="订单编号" />

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px80dp"
            android:text="123456789" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px80dp"
            android:layout_weight="1"
            android:text="下单时间" />

        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px80dp"
            android:text="2018-10-15 10:30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px80dp"
            android:layout_weight="1"
            android:text="支付方式" />

        <TextView
            android:id="@+id/pay_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px80dp"
            android:text="在线支付" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px120dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="@dimen/px96dp"
            android:layout_height="@dimen/px96dp"
            android:layout_marginLeft="@dimen/px54dp"
            android:background="@drawable/icon_back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px120dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.domain.multipltextview.MultiplTextView
                style="@style/OrderDetailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/order_details"
                android:textSize="@dimen/px40sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px126dp"
        android:background="@drawable/pay_status_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="@dimen/px100dp"
            android:layout_height="@dimen/px100dp"
            android:layout_marginLeft="@dimen/px60dp"
            android:background="@drawable/icon_yizhifu" />

        <com.domain.multipltextview.MultiplTextView
            android:id="@+id/pay_status"
            removeDefaultPadding="true"
            android:layout_width="@dimen/px0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="支付成功"
            android:textColor="@color/pay_status"
            android:textSize="@dimen/px36sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/px84dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.domain.multipltextview.MultiplTextView
                android:id="@+id/arrival_time"
                removeDefaultPadding="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arrival_time"
                android:textColor="@color/pay_status"
                android:textSize="@dimen/px36sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px158dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/repeat_order"
            android:layout_width="@dimen/px0dp"
            android:layout_height="@dimen/px96dp"
            android:layout_marginLeft="@dimen/px84dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="@string/one_more_order"
            android:textColor="@color/white"
            android:textSize="@dimen/px36sp" />

        <Button
            android:id="@+id/pay_order"
            android:layout_width="@dimen/px0dp"
            android:layout_height="@dimen/px96dp"
            android:layout_marginLeft="@dimen/px84dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:text="@string/pay_order"
            android:textColor="@color/white"
            android:textSize="@dimen/px36sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/cancel_order"
            android:layout_width="@dimen/px0dp"
            android:layout_height="@dimen/px96dp"
            android:layout_marginLeft="@dimen/px92dp"
            android:layout_marginRight="@dimen/px84dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg2"
            android:text="@string/order_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/px36sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp"
        android:layout_marginLeft="@dimen/px84dp"
        android:layout_marginRight="@dimen/px84dp"
        android:alpha="0.06"
        android:background="@color/white"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/px36dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px126dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.domain.multipltextview.MultiplTextView
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px84dp"
                    android:layout_weight="1"
                    android:text="外卖服务由美团外卖提供"
                    android:textSize="@dimen/px36sp" />

                <Button
                    android:id="@+id/phone"
                    android:layout_width="@dimen/px64dp"
                    android:layout_height="@dimen/px64dp"
                    android:layout_marginLeft="@dimen/px40dp"
                    android:layout_marginRight="@dimen/px84dp"
                    android:background="@drawable/phone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:alpha="0.06"
                android:background="@color/white"></View>

            <com.domain.multipltextview.MultiplTextView
                android:id="@+id/business_name"
                style="@style/OrderDetailsText"
                removeDefaultPadding="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginTop="@dimen/px36dp"
                android:text="杨铭宇黄焖鸡米饭（景明佳园店）" />

            <ListView
                android:id="@+id/ll_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:clickable="false"
                android:divider="@null"
                android:scrollbars="none"></ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px36dp"
                android:orientation="horizontal">

                <com.domain.multipltextview.MultiplTextView
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px84dp"
                    android:layout_weight="1"
                    android:text="包装费" />

                <com.domain.multipltextview.MultiplTextView
                    android:id="@+id/packing_fee"
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px40dp"
                    android:layout_marginRight="@dimen/px84dp"
                    android:text="¥2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px36dp"
                android:orientation="horizontal">

                <com.domain.multipltextview.MultiplTextView
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px84dp"
                    android:layout_weight="1"
                    android:text="配送费" />

                <com.domain.multipltextview.MultiplTextView
                    android:id="@+id/distribution_fee"
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px40dp"
                    android:layout_marginRight="@dimen/px84dp"
                    android:text="¥2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px36dp"
                android:orientation="horizontal">

                <com.domain.multipltextview.MultiplTextView
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px84dp"
                    android:layout_weight="1"
                    android:text="满减优惠" />

                <com.domain.multipltextview.MultiplTextView
                    android:id="@+id/discount"
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px40dp"
                    android:layout_marginRight="@dimen/px84dp"
                    android:text="-¥14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:layout_marginTop="@dimen/px36dp"
                android:alpha="0.06"
                android:background="@color/white"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px126dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <com.domain.multipltextview.MultiplTextView
                    android:id="@+id/real_pay"
                    removeDefaultPadding="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实付19.5元"
                    android:textColor="@color/real_pay"
                    android:textSize="@dimen/px40sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:alpha="0.06"
                android:background="@color/white"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px168dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.domain.multipltextview.MultiplTextView
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:text="配送地址" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <com.domain.multipltextview.MultiplTextView
                        android:id="@+id/contact"
                        style="@style/OrderDetailsText"
                        removeDefaultPadding="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周女士 13813881388" />

                    <com.domain.multipltextview.MultiplTextView
                        android:id="@+id/address"
                        style="@style/OrderDetailsText"
                        removeDefaultPadding="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px26dp"
                        android:alpha="0.6"
                        android:text="南海科技生物园"
                        android:textSize="@dimen/px30sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:alpha="0.06"
                android:background="@color/white"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px126dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.domain.multipltextview.MultiplTextView
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="期望时间" />

                <com.domain.multipltextview.MultiplTextView
                    android:id="@+id/expected_time"
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-10-19 （周五）18:30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:alpha="0.06"
                android:background="@color/white"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px126dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.domain.multipltextview.MultiplTextView
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="订单编号" />

                <com.domain.multipltextview.MultiplTextView
                    android:id="@+id/order_id"
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456789" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:alpha="0.06"
                android:background="@color/white"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px126dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.domain.multipltextview.MultiplTextView
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="下单时间" />

                <com.domain.multipltextview.MultiplTextView
                    android:id="@+id/order_time"
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-10-15 10:30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:alpha="0.06"
                android:background="@color/white"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px126dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.domain.multipltextview.MultiplTextView
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="支付方式" />

                <com.domain.multipltextview.MultiplTextView
                    android:id="@+id/pay_method"
                    style="@style/OrderDetailsText"
                    removeDefaultPadding="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线支付" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px2dp"
                android:layout_marginLeft="@dimen/px84dp"
                android:layout_marginRight="@dimen/px84dp"
                android:alpha="0.06"
                android:background="@color/white"></View>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/px312dp"
	android:background="@drawable/bg_filter_pop">

	

	<GridView
	android:id="@+id/gv_subType"
	android:numColumns="4"
	android:layout_marginTop="@dimen/px42dp"
	android:layout_marginBottom="@dimen/px42dp"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="@dimen/px84dp"
	android:layout_marginRight="@dimen/px84dp"
	android:divider="@color/dark_gray"
	android:dividerHeight="0dp"
	android:scrollbars="none"
	android:verticalSpacing="@dimen/px48dp"
	android:horizontalSpacing="@dimen/px50dp"
	tools:listitem="@layout/layout_filter_sub_type_item"/>

	<View
		android:id="@+id/view"
		android:layout_width="match_parent"
		android:layout_height="@dimen/px2dp"
		android:layout_below="@+id/gv_subType"
		android:layout_marginLeft="@dimen/px84dp"
		android:layout_marginRight="@dimen/px84dp"
		android:background="@color/split_view_color" />

	<LinearLayout
		android:id="@+id/l_confirm"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/view"
		android:layout_marginTop="@dimen/px30dp"
		android:layout_marginBottom="@dimen/px30dp"
		android:layout_centerHorizontal="true"
		android:orientation="horizontal">
		

		<TextView
			android:id="@+id/tv_ok"
			android:layout_width="@dimen/px540dp"
			android:layout_height="@dimen/px108dp"
			android:background="@drawable/btn_bg"
			android:gravity="center"
			android:layout_gravity="center"
			android:padding="10dp"
			android:text="@string/ok"
			android:textColor="@color/white"
			android:textSize="@dimen/px36sp" />

	</LinearLayout>

</RelativeLayout>
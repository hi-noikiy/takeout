<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/white">

	<ListView
		android:id="@+id/lv_filter_type"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/px84dp"
		android:layout_marginRight="@dimen/px84dp"
		android:divider="@color/dark_gray"
		android:dividerHeight="1dp"
		android:scrollbars="none"
		tools:listitem="@layout/layout_pop_filter_type_item" />

	<android.support.v7.widget.LinearLayoutCompat
		android:id="@+id/l_confirm"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/px84dp"
		android:layout_marginRight="@dimen/px84dp"
		android:layout_below="@+id/lv_filter_type"
		android:layout_marginTop="10dp"
		android:orientation="horizontal">

		<android.support.v7.widget.AppCompatTextView
			android:id="@+id/tv_reset"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@drawable/shape_pop_filter_set_bg"
			android:gravity="center"
			android:padding="10dp"
			android:text="@string/reset"
			android:textSize="16sp" />

		<android.support.v7.widget.AppCompatTextView
			android:id="@+id/tv_ok"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:layout_weight="1"
			android:background="@drawable/shape_pop_filter_set_bg"
			android:gravity="center"
			android:padding="10dp"
			android:text="@string/ok"
			android:textSize="16sp" />

	</android.support.v7.widget.LinearLayoutCompat>

</RelativeLayout>
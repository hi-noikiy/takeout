<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/px312dp"
	android:background="@drawable/bg_pop">

	<ListView
		android:id="@+id/lv_filter_type"
		android:layout_width="match_parent"
		android:layout_height="@dimen/px144dp"
		android:layout_marginLeft="@dimen/px84dp"
		android:layout_marginRight="@dimen/px84dp"
		android:divider="@color/dark_gray"
		android:dividerHeight="0dp"
		android:scrollbars="none"
		tools:listitem="@layout/layout_pop_filter_type_item" />

	<View
		android:id="@+id/view"
		android:layout_width="match_parent"
		android:layout_height="@dimen/px2dp"
		android:layout_below="@+id/lv_filter_type"
		android:layout_marginLeft="@dimen/px84dp"
		android:layout_marginRight="@dimen/px84dp"
		android:background="@color/split_view_color" />

	<android.support.v7.widget.LinearLayoutCompat
		android:id="@+id/l_confirm"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/view"
		android:layout_marginTop="@dimen/px30dp"
		android:layout_marginBottom="@dimen/px30dp"
		android:layout_centerHorizontal="true"
		android:orientation="horizontal">
		

		<android.support.v7.widget.AppCompatTextView
			android:id="@+id/tv_ok"
			android:layout_width="@dimen/px540dp"
			android:layout_height="@dimen/px108dp"
			android:background="@drawable/btn_bg"
			android:gravity="center"
			android:layout_gravity="center"
			android:padding="10dp"
			android:text="@string/ok"
			android:textColor="@color/white"
			android:textSize="@dimen/px36sp" />

	</android.support.v7.widget.LinearLayoutCompat>

</RelativeLayout>
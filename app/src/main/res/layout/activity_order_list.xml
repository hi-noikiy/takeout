<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <RelativeLayout
        android:id="@+id/rl_layout_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px130dp"
        android:background="@color/gray_bg"
        android:paddingLeft="@dimen/px30dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/px130dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:src="@drawable/back" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/takeaway_order"
            android:textColor="@color/white"
            android:textSize="@dimen/px56sp" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_tip_no_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_layout_header"
        android:layout_centerHorizontal="true"
        android:background="@color/gray_bg"
        android:drawablePadding="@dimen/px20dp"
        android:drawableTop="@mipmap/ic_no_result"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.2"
        android:paddingTop="@dimen/px50dp"
        android:text="@string/no_search_result_keyword"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_layout_header"
        android:background="@color/white"
        tools:listitem="@layout/layout_order_item" />

</RelativeLayout>
